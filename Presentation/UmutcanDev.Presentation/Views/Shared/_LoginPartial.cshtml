@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="navbar-nav align-items-center">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <span class="nav-link text-primary fw-bold">Merhaba, @User.Identity?.Name!</span>
        </li>
        <li class="nav-item">
            <form class="d-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="btn btn-sm btn-outline-danger ms-2">Çıkış Yap</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark fw-semibold" asp-area="Identity" asp-page="/Account/Register">
                <i class="bi bi-person-plus"></i> Kayıt Ol
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark fw-semibold" asp-area="Identity" asp-page="/Account/Login">
                <i class="bi bi-box-arrow-in-right"></i> Giriş Yap
            </a>
        </li>
    }
</ul>

<style>
    .nav-link {
        transition: color 0.2s, background-color 0.2s;
    }

        .nav-link:hover {
            color: #0056b3 !important;
            background-color: rgba(0, 86, 179, 0.1);
            border-radius: 0.5rem;
        }

    .btn-outline-danger {
        transition: background-color 0.2s, color 0.2s, box-shadow 0.2s;
    }

        .btn-outline-danger:hover {
            background-color: #dc3545;
            color: #fff;
            box-shadow: 0 4px 12px rgba(220, 53, 69, 0.3);
        }
</style>
