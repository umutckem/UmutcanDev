<!-- Sergiler Bölümü (Projelerim) -->
<section class="container py-5">
    <div class="d-flex align-items-center mb-4" data-aos="fade-right">
        <i class="bi bi-lightbulb display-6 me-2 text-warning"></i>
        <div>
            <h2 class="fw-bold mb-0" style="color:#1e3c72;">Projelerim</h2>
            <small class="text-muted">Gerçekleştirdiğim bazı projelerim aşağıda yer alıyor.</small>
        </div>
    </div>
    <div class="row row-cols-1 row-cols-md-3 g-4">
        @if (Model != null && Model.Any())
        {
            int aosDelay = 0;
            foreach (var sergi in Model)
            {
                if (sergi == null) { continue; }

                <div class="col" data-aos="fade-up" data-aos-delay="@aosDelay">
                    <div class="card h-100 shadow-sm border-0 card-portfolio">
                        @if (!string.IsNullOrWhiteSpace(sergi.ResimUrl))
                        {
                            <img src="@sergi.ResimUrl" class="card-img-top" alt="@sergi.ProjeAdi" style="object-fit:cover; height:180px;" />
                        }
                        <div class="card-body">
                            <h5 class="card-title fw-semibold">
                                @(!string.IsNullOrWhiteSpace(sergi.ProjeAdi) ? sergi.ProjeAdi : "Proje Adı Yok")
                            </h5>
                            <p class="card-text text-muted">
                                @(!string.IsNullOrWhiteSpace(sergi.Aciklama) ? sergi.Aciklama : "Açıklama Yok")
                            </p>

                            @if (sergi.TeknolojilerListesi != null && sergi.TeknolojilerListesi.Any())
                            {
                                <div class="mt-2">
                                    <span class="fw-bold small text-secondary d-block mb-1">Teknolojiler:</span>
                                    <div class="d-flex flex-wrap gap-1">
                                        @foreach (var tech in sergi.TeknolojilerListesi)
                                        {
                                            if (!string.IsNullOrWhiteSpace(tech))
                                            {
                                                <span class="tech-badge">@tech</span>
                                            }
                                        }
                                    </div>
                                </div>
                            }
                        </div>
                        <div class="card-footer bg-white border-0 d-flex justify-content-between align-items-center">
                            <small class="text-muted">
                                @(sergi.OlusturmaTarihi?.ToString("MM.yyyy") ?? "Tarih yok")
                            </small>
                            @if (!string.IsNullOrWhiteSpace(sergi.GithubUrl))
                            {
                                <a href="@sergi.GithubUrl" target="_blank" class="btn btn-sm btn-outline-dark d-flex align-items-center">
                                    <i class="bi bi-github me-1"></i> GitHub
                                </a>
                            }
                        </div>
                    </div>
                </div>
                aosDelay += 100;
            }
        }
        else
        {
            <div class="col">
                <div class="alert alert-info text-center w-100" data-aos="fade-in">
                    Henüz gösterilecek proje yok.
                </div>
            </div>
        }
    </div>
</section>

