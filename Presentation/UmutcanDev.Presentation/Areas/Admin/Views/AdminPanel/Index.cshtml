<style>
    :root {
        --primary-color: #4361ee;
        --primary-light: #4895ef;
        --secondary-color: #3f37c9;
        --dark-color: #1a1a2e;
        --light-color: #f8f9fa;
        --success-color: #4cc9f0;
        --border-radius: 12px;
        --box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        --transition: all 0.3s ease;
    }

    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background-color: #f5f7ff;
        color: var(--dark-color);
        line-height: 1.6;
    }

    .admin-container {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
        padding: 2rem;
    }

    .admin-card {
        background: white;
        border-radius: var(--border-radius);
        box-shadow: var(--box-shadow);
        width: 100%;
        max-width: 800px;
        overflow: hidden;
        transition: var(--transition);
    }

        .admin-card:hover {
            box-shadow: 0 15px 40px rgba(0, 0, 0, 0.15);
            transform: translateY(-5px);
        }

    .admin-header {
        background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
        color: white;
        padding: 2.5rem 2rem;
        text-align: center;
        position: relative;
    }

        .admin-header::after {
            content: '';
            position: absolute;
            bottom: -20px;
            left: 50%;
            transform: translateX(-50%);
            width: 40px;
            height: 40px;
            background: white;
            clip-path: polygon(0% 0%, 100% 0%, 50% 100%);
        }

    .admin-icon {
        width: 80px;
        height: 80px;
        margin: 0 auto 1.5rem;
        display: flex;
        align-items: center;
        justify-content: center;
        background: rgba(255, 255, 255, 0.2);
        border-radius: 50%;
        backdrop-filter: blur(5px);
    }

        .admin-icon svg {
            width: 40px;
            height: 40px;
        }

    .admin-header h2 {
        font-size: 1.8rem;
        font-weight: 700;
        margin-bottom: 0.5rem;
    }

    .admin-subtitle {
        opacity: 0.9;
        font-weight: 400;
        font-size: 1rem;
    }

    .admin-actions {
        padding: 3rem 2rem 2rem;
        display: flex;
        flex-direction: column;
        gap: 2rem;
    }

    .admin-button {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.8rem;
        padding: 1rem 2rem;
        background: linear-gradient(to right, var(--primary-color), var(--primary-light));
        color: white;
        border-radius: var(--border-radius);
        text-decoration: none;
        font-weight: 600;
        font-size: 1.1rem;
        transition: var(--transition);
        box-shadow: 0 4px 15px rgba(67, 97, 238, 0.3);
        margin: 0 auto;
        width: fit-content;
    }

        .admin-button:hover {
            transform: translateY(-3px);
            box-shadow: 0 8px 25px rgba(67, 97, 238, 0.4);
            background: linear-gradient(to right, var(--primary-light), var(--primary-color));
        }

    .button-icon {
        display: flex;
    }

    .quick-links {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
        gap: 1rem;
        margin-top: 1.5rem;
    }

    .quick-link {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.8rem 1rem;
        background: var(--light-color);
        border-radius: 8px;
        color: var(--dark-color);
        text-decoration: none;
        font-size: 0.9rem;
        transition: var(--transition);
    }

        .quick-link:hover {
            background: #e9ecef;
            transform: translateX(5px);
        }

        .quick-link svg {
            flex-shrink: 0;
        }

    @@media (max-width: 768px) {
        .admin-container

    {
        padding: 1rem;
    }

    .admin-header {
        padding: 2rem 1.5rem;
    }

    .admin-actions {
        padding: 2rem 1.5rem 1.5rem;
    }

    .quick-links {
        grid-template-columns: 1fr;
    }

    }
</style>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Buton animasyonu
        const adminButton = document.querySelector('.admin-button');

        adminButton.addEventListener('mouseenter', function() {
            this.querySelector('.button-icon').style.transform = 'rotate(90deg)';
        });

        adminButton.addEventListener('mouseleave', function() {
            this.querySelector('.button-icon').style.transform = 'rotate(0)';
        });

        // Hızlı link animasyonu
        const quickLinks = document.querySelectorAll('.quick-link');

        quickLinks.forEach(link => {
            link.addEventListener('mouseenter', function() {
                this.querySelector('svg').style.transform = 'scale(1.2)';
            });

            link.addEventListener('mouseleave', function() {
                this.querySelector('svg').style.transform = 'scale(1)';
            });
        });
    });
</script>