@page
@model RegisterModel
@{
    ViewData["Title"] = "Kayıt Ol";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

<style>
    body {
        background: linear-gradient(120deg, #89f7fe 0%, #66a6ff 100%);
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        min-height: 100vh;
    }

    .register-card {
        background: rgba(255, 255, 255, 0.97);
        border-radius: 2rem;
        box-shadow: 0 8px 32px 0 rgba(31, 38, 135, 0.18);
        border: 1px solid rgba(255, 255, 255, 0.18);
        backdrop-filter: blur(4px);
        max-width: 420px;
        width: 100%;
        margin: 40px auto;
        padding: 2.5rem 2rem;
    }

    .form-floating > .form-control {
        padding-left: 3.2rem !important;
        padding-right: 1rem;
        border-radius: 1rem;
        border: 1px solid #e3e6f0;
        background: #f8fafd;
        height: 58px;
        font-size: 1rem;
    }

        .form-floating > .form-control:focus {
            border-color: #66a6ff;
            box-shadow: 0 0 0 0.2rem rgba(102, 166, 255, 0.1);
            background: #fff;
        }

    .form-floating > label {
        color: #6c757d;
        font-weight: 500;
        left: 3.2rem;
    }

    .input-icon {
        position: absolute;
        left: 1.1rem;
        top: 50%;
        transform: translateY(-50%);
        color: #66a6ff;
        font-size: 1.2rem;
        pointer-events: none;
        z-index: 2;
    }

    .form-group {
        position: relative;
    }

    .btn-primary {
        background: linear-gradient(90deg, #66a6ff 0%, #89f7fe 100%);
        border: none;
        border-radius: 1rem;
        font-weight: 600;
        letter-spacing: 1px;
        transition: background 0.2s, box-shadow 0.2s;
        box-shadow: 0 4px 16px rgba(102, 166, 255, 0.15);
    }

        .btn-primary:hover,
        .btn-primary:focus {
            background: linear-gradient(90deg, #89f7fe 0%, #66a6ff 100%);
            box-shadow: 0 6px 24px rgba(102, 166, 255, 0.25);
        }

    @@media (max-width: 576px) {
        .register-card {
            padding: 1.5rem 1rem;
            border-radius: 1.5rem;
        }
    }
</style>

<div class="d-flex align-items-center justify-content-center" style="min-height: 100vh;">
    <div class="register-card">
        <div class="card-body p-0">
            <h2 class="text-center mb-4 fw-bold" style="color:#66a6ff;">@ViewData["Title"]</h2>
            <hr />
            <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

                <div class="form-group form-floating mb-3">
                    <span class="input-icon"><i class="bi bi-envelope"></i></span>
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                    <label asp-for="Input.Email">Email</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>

                <div class="form-group form-floating mb-3">
                    <span class="input-icon"><i class="bi bi-lock"></i></span>
                    <input asp-for="Input.Password" type="password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Şifre" />
                    <label asp-for="Input.Password">Şifre</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>

                <div class="form-group form-floating mb-4">
                    <span class="input-icon"><i class="bi bi-shield-lock"></i></span>
                    <input asp-for="Input.ConfirmPassword" type="password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Şifre Tekrar" />
                    <label asp-for="Input.ConfirmPassword">Şifre Tekrar</label>
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>

                <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Kayıt Ol</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
